// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
  TAHFIZH_HEAD
  KATIB
  PARENT
}

enum Gender {
  M
  F
}

enum SessionType {
  Murojaah
  Setoran
}

model User {
  id             Int       @id @default(autoincrement())
  username       String    @unique
  password       String
  role           Role
  relatedTeacher Teacher?
  relatedStudent Student?
  Parents        Parents[]
}

model Teacher {
  id             Int              @id @default(autoincrement())
  loginName      String           @unique
  nig            String           @unique
  name           String
  email          String           @unique
  gender         Gender
  birthPlace     String
  birthDate      DateTime
  profileURL     String
  user           User             @relation(fields: [userId], references: [id])
  userId         Int
  TeacherDetails TeacherDetails[]
  TahfizhGroup   TahfizhGroup[]
  Session        Session[]
}

model TeacherDetails {
  id           Int            @id @default(autoincrement())
  guru         Teacher        @relation(fields: [guruId], references: [id])
  guruId       Int            @unique
  nig          String         @unique
  Session      Session[]
  tahfidzGroup TahfizhGroup[]
}

model TahfizhGroup {
  id               Int              @id @default(autoincrement())
  teacher          Teacher          @relation(fields: [teacherId], references: [id])
  teacherId        Int
  tahfidzStudent   TahfidzStudent[]
  TeacherDetails   TeacherDetails   @relation(fields: [teacherDetailsId], references: [id])
  teacherDetailsId Int
}

model Parents {
  id          Int       @id @default(autoincrement())
  nama        String
  birthPlace  String
  birthDate   DateTime
  username    String    @unique
  pekerjaan   String
  status      String
  penghasilan Int
  profileURL  String
  students    Student[]
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

model Student {
  id             Int              @id @default(autoincrement())
  nit            String           @unique
  nisn           String           @unique
  nism           String           @unique
  name           String
  gender         Gender
  birthPlace     String
  birthDate      DateTime
  tahunMasuk     Int
  tahunLulus     Int
  profileURL     String
  namaAyah       String
  namaIbu        String
  namaWali       String
  parent         Parents          @relation(fields: [parentId], references: [id])
  parentId       Int
  user           User             @relation(fields: [userId], references: [id])
  userId         Int
  TahfidzStudent TahfidzStudent[]
  Session        Session[]
}

model TahfidzStudent {
  id             Int          @id @default(autoincrement())
  student        Student      @relation(fields: [nit], references: [nit])
  nit            String
  session        Session[]
  tahfidzGroup   TahfizhGroup @relation(fields: [tahfizhGroupId], references: [id])
  tahfizhGroupId Int
}

model Session {
  id               Int             @id @default(autoincrement())
  waktuMulai       DateTime
  waktuSelesai     DateTime
  juz              Int
  halaman          Int
  awalSetoran      String
  akhirSetoran     String
  tajwid           Int
  kelancaran       Int
  makhrojSifat     Int
  teacher          Teacher         @relation(fields: [teacherId], references: [id])
  teacherId        Int
  student          Student         @relation(fields: [studentId], references: [id])
  studentId        Int
  type             SessionType
  percepatan       Percepatan?
  TahfidzStudent   TahfidzStudent? @relation(fields: [tahfidzStudentId], references: [id])
  tahfidzStudentId Int?
  TeacherDetails   TeacherDetails? @relation(fields: [teacherDetailsId], references: [id])
  teacherDetailsId Int?
}

model Percepatan {
  id        Int      @id @default(autoincrement())
  tanggal   DateTime
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId Int
}

model Alquran {
  id         Int    @id @default(autoincrement())
  juz        Int
  halaman    Int
  awalSurah  Int
  awalAyat   String
  akhirSurah String
  akhirAyat  Int
}
